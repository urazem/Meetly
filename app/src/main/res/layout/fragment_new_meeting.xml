<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AuthorizationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/registrationAccountScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:layout_editor_absoluteX="384dp">

                <ImageView
                    android:id="@+id/footerBackgroundR"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@color/colorProjectWhite" />

                <EditText
                    android:id="@+id/nameInput2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/fields"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="@color/colorProjectTextDark"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/footerBackgroundR"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/userIcon"
                    app:layout_constraintTop_toBottomOf="@+id/nameInputInfo" />

                <TextView
                    android:id="@+id/textView3r4"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Участники встречи"
                    android:textColor="@color/colorProjectTextDark"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/button4r3"
                    app:layout_constraintTop_toBottomOf="@+id/button4r3" />

                <Button
                    android:id="@+id/button4r5"
                    android:layout_width="244dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fields2"
                    android:text="Настроить дату"
                    android:textAllCaps="false"
                    android:textColor="@color/colorProjectTextWhite"
                    app:layout_constraintStart_toStartOf="@+id/nameInput"
                    app:layout_constraintTop_toBottomOf="@+id/nameInput" />

                <TextView
                    android:id="@+id/textView3r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Дата встречи"
                    android:textColor="@color/colorProjectTextDark"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/surnameInput"
                    app:layout_constraintTop_toBottomOf="@+id/surnameInput" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@color/colorProjectTextWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:background="@android:drawable/ic_delete"
                    app:layout_constraintStart_toStartOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Создание встречи"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                    app:layout_constraintStart_toEndOf="@+id/button5"
                    app:layout_constraintTop_toTopOf="@+id/imageView4" />

                <ImageView
                    android:id="@+id/userIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    app:layout_constraintStart_toStartOf="@+id/footerBackgroundR"
                    app:layout_constraintTop_toTopOf="@+id/nameInputInfo" />

                <TextView
                    android:id="@+id/nameInputInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:text="Название встречи"
                    android:textColor="@color/colorProjectTextDark"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/nameInput2"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/nameInput"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fields"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="@color/colorProjectTextDark"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/textView3r"
                    app:layout_constraintTop_toBottomOf="@+id/textView3r" />

                <EditText
                    android:id="@+id/nameInput3"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fields"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="@color/colorProjectTextDark"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/textView3r2"
                    app:layout_constraintTop_toBottomOf="@+id/textView3r2" />

                <EditText
                    android:id="@+id/nameInput4"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fields"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="@color/colorProjectTextDark"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/textView3r3"
                    app:layout_constraintTop_toBottomOf="@+id/textView3r3" />

                <EditText
                    android:id="@+id/nameInput5"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fields"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="@color/colorProjectTextDark"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/textView3r4"
                    app:layout_constraintTop_toBottomOf="@+id/textView3r4" />

                <TextView
                    android:id="@+id/surnameInputInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Описание встречи"
                    android:textColor="@color/colorProjectTextDark"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/surnameInput"
                    app:layout_constraintTop_toBottomOf="@+id/nameInput2" />

                <EditText
                    android:id="@+id/surnameInput"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/fields"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="@color/colorProjectTextDark"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/userIcon"
                    app:layout_constraintTop_toBottomOf="@+id/surnameInputInfo" />

                <TextView
                    android:id="@+id/textView3r2"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Время встречи"
                    android:textColor="@color/colorProjectTextDark"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/button4r5"
                    app:layout_constraintTop_toBottomOf="@+id/button4r5" />

                <Button
                    android:id="@+id/button4r2"
                    android:layout_width="240dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fields2"
                    android:text="Настроить время"
                    android:textAllCaps="false"
                    android:textColor="@color/colorProjectTextWhite"
                    app:layout_constraintStart_toStartOf="@+id/nameInput3"
                    app:layout_constraintTop_toBottomOf="@+id/nameInput3" />

                <TextView
                    android:id="@+id/textView3r3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Место встречи"
                    android:textColor="@color/colorProjectTextDark"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/button4r2"
                    app:layout_constraintTop_toBottomOf="@+id/button4r2" />

                <Button
                    android:id="@+id/button4r3"
                    android:layout_width="240dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fields2"
                    android:text="Выбрать заведение"
                    android:textAllCaps="false"
                    android:textColor="@color/colorProjectTextWhite"
                    app:layout_constraintStart_toStartOf="@+id/nameInput4"
                    app:layout_constraintTop_toBottomOf="@+id/nameInput4" />

                <Button
                    android:id="@+id/button4r"
                    android:layout_width="323dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/fields2"
                    android:text="Создать встречу"
                    android:textAllCaps="false"
                    android:textColor="@color/colorProjectTextWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button4r6" />

                <Button
                    android:id="@+id/button4r6"
                    android:layout_width="240dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/fields2"
                    android:text="Выбрать участников"
                    android:textAllCaps="false"
                    android:textColor="@color/colorProjectTextWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/nameInput5"
                    app:layout_constraintTop_toBottomOf="@+id/nameInput5"
                    app:layout_constraintVertical_bias="0.0" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>